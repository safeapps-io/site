{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "isolatedModules": true,
    "types": ["./src/@types/static.d.ts"],
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2020"
    ],
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
